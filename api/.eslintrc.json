{
  "env": {
      "node": true,
      "browser": false,
      "commonjs": true,
      "es6": true,
      "mocha": true,
      "jest/globals": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "rules": {
      "indent": ["error", 2]
  },
  "plugins": [
      "jest"
  ]
}